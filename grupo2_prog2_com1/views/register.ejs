<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

	<body>
		<!-- Header -->
		<%- include('./partials/header') %>
			<!-- /Header -->

			<!-- Novedades -->
			<div class="container register-wrapper">
				<div class="row justify-content-center">
					<div class="col-12 col-md-6">
						 <form action="/register" method="POST" class="register-form">
							<div>
								<h2 class="register-title ">Registrarse</h2>
							</div>
								<div class="texto">
									<label for="username">Nombre de Usuario: </label>
									<input type="text" id="username" name="username" class="form-control"
										placeholder="Ingresa tu nombre de usuario" required>
								</div>
								<div class="texto">
									<label for="email">Correo Electrónico: </label>
									<input type="email" id="email" name="email" class="form-control"
										placeholder="Ingresa tu correo" required>
								</div>
								<div class="texto">
									<label for="password">Contraseña: </label>
									<input type="password" id="password" name="password" class="form-control"
										placeholder="Ingresa tu contraseña" required>
								</div>
								<div class="texto">
									<label for="birthdate">Fecha de nacimiento:</label>
									<input type="date" id="birthdate" name="birthdate" required class="form-control">
								</div>
								<div class="texto"> 
									<label for="document">Nro de documento:</label>
									<input type="number" id="document" name="document" placeholder="Ingresa tu número de documento" required class="form-control">
								</div>
								<div class="texto">
									<label for="profilePicture">Foto de perfil:</label>
									<input type="text" id="profilePicture" name="profilePicture" placeholder="Ingresa la URL de tu foto de perfil" required class="form-control">
								</div>
								<button type="submit" class="registrate">Registrarse</button>
							</form>
							<p class="text-center ">
								¿Ya tienes una cuenta? <a href="/login" class="register-link">Inicia sesión aquí</a>
							</p>
					</div>
				</div>
			</div>

			<!-- footer -->
			<%- include('./partials/footer') %>
				<!-- /footer -->
	</body>

</html>