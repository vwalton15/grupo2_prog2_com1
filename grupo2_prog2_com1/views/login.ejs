<!DOCTYPE html>
<html lang="es">
<title>Kylina jewels</title>
<!-- Include Head -->

<%- include('./partials/head') %>

	<body>
		<!-- Header -->
		<%- include('./partials/header') %>
			<!-- /Header -->

			<!-- Novedades -->
			<div class="container login-wrapper">
				<div class="row justify-content-center">
					<div class="col-12 col-md-6">
						<h2 class="text-center login-title">Ingresar</h2>
						<form action="/login" method="POST" class="login-form">
							<div class="login-group">
								<label for="email">Usuario: </label>
								<input type="email" id="email" name="email" class="login-control"
									placeholder="Ingresa tu email" required>
							</div>
							<div class="login-group">
								<label for="password">Contraseña:</label>
								<input type="password" id="password" name="password" class="login-control"
									placeholder="Ingresa tu contraseña" required>
							</div>
							<div class="login-group form-check">
								<input type="checkbox" id="remember" name="remember" class="login-check-input">
								<label for="remember" class="remember">Recordarme</label>
							</div>
							<button type="submit" class="ingresar">Ingresar</button>
						</form>
					</div>
				</div>
			</div>
			<!-- footer -->
			<%- include('./partials/footer') %>
				<!-- /footer -->
	</body>

</html>